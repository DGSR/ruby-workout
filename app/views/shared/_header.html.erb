<header class="masthead mb-auto">
  <div class="inner">
    <h3 class="masthead-brand">Cover</h3>
    <nav class="nav nav-masthead justify-content-center">
      <%=link_to t('.home'), root_path,class:'nav-link active' %>
      <%=link_to t('.help'), main_help_path,class:'nav-link'  %>
      <%=link_to t('.contact'), main_contacts_path,class:'nav-link' %>
      <%=link_to t('.about'), main_about_path,class:'nav-link'  %>
      <% if signed_in? %>
        <%link_to "Users", '#',class:'nav-link' %>
        <div class="dropdown nav-link">
          <%=link_to "#", id: "navbar-dropdown", class: "dropdown-toggle", data: { toggle: "dropdown" }, aria: { haspopup: true, expanded: false } do %>
            <%= t('.person') %>
          <% end %>
          <div class="dropdown-menu" aria-labelledby="navbar-dropdown">
              <%= link_to t('.profile'), current_user, class:'dropdown-item' %>
              <%= link_to t('.settings'), '#', class:' dropdown-item'%>
              <%= link_to t('.sign_out'), signout_path, method: "delete", class:'dropdown-item' %>
          </div>
        </div>
        <div class="logged nav-link">
          <%= @current_user.email%>
        </div>
        <%= gravatar_for current_user %>
      <% else %>
          <%= link_to t('.sign_in'), signin_path, class:'nav-link'%>
      <% end %>
    </nav>
  </div>
</header>