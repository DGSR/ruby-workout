<main role="main" class="inner cover">

  <div class="image">
    <div class="row">
      <div class="col-md-3">
        <div class="left_controls">
          <div class="select_theme">
            <%= render 'work/button_theme_select', locale: @current_locale %>
          </div>
          <div class="modal_list_results">
            <%= render 'work/button_list_results' %>
            <br/>
          </div>
          <span class="common_value">
            <%= t('.common_value') %>
            <h2 class="common" title="Common value"></h2>
          </span>
          <span class="total_values">
            <%= t('.total_values') %>
            <h2 class="total" title="Total values">
              <%= @values_qty.round %>
            </h2>
          </span>
        </div>
        <br/>
      </div>
      <div class="col-md-9">
        <div class="image_display">
          <div class="row image">
            <div class="col-md-12">
              <h2 class="up-theme" title="<%=t('.theme_name')%>">
                <%= @selected_theme%>
              </h2>
            </div>
            <div class="col-md-1">
              <div class="img-left-side">
                <h3 title="list to previous image">
                  <i class="fa fa-chevron-circle-left strong"></i>
                </h3>
              </div>
            </div>
            <div class="col-md-10">
              <div class="img-center" title="Default image">
                <%= image_tag("default.jpg", alt: "Default Image",title: "Default image") %>
                <div class="pt-3 display-4 image_user_value" title="Expert value"></div>
              </div>
            </div>
            <div class="col-md-1">
              <div class="img-right-side">
                <h3 title="list to next image">
                  <i class="fa fa-chevron-circle-right"></i>
                </h3>
              </div>
            </div>
          </div>
          <div class="row diag">
            <div class="col-md-12">
              <div class="image_diag">
                <div class="display-4 pt-3 pb-3" id="chosen_value" title="<%= t(".your_score") %>"><%= t(".no_idea") %></div>
                <h2 class="down" title="Value scale">
                  <%= t(".make_decision") %>
                </h2>
                <p class="button__results save lead" title="Save image diag results">
                  <%= link_to t(".save_decision"),"#",
                              {"data-remote"=>true,:format=>"js",
                               :title => "Save image diag results",
                               class: "btn btn-secondary btn-sm button__left theme"} %>
                </p>
                <div class="row">
                  <div id="slider-left" class="col-md-2"></div>
                  <div class="col-md-8 slider"><input id="slide" max="100" min="0" step="5" type="range" value="50"/></div>
                  <div id="slider-right" class="col-md-2"></div>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</main>