$('.img-left-side').css({"display": "none"});
$('.img-right-side').css({"display": "none"});

// to check whether the target is the content-area itself or a child of the content-area.

$(document).click(function(e){
    if($(e.target).is(".select_theme") || $(e.target).closest(".select_theme").length) {
        console.log(": In doc.click = IN side content area"  );
    }
    else {
        console.log(": In doc.click = OUT side content area"  );
        $('.form_select').css({"display": "none"});
        $('.select_theme').empty().html("<%= j render 'work/button_theme_select' %>");
    }
});

$("#slide").change(function (){
    //get the element
    let displayValue = document.getElementById("chosen_value");
    //show the amount
    console.log("IN updateSlider:  - slideAmount = " + this.value);
    let val=parseInt(this.value)
    if(val===50){
        displayValue.innerHTML="<%= t(".no_idea") %>"
    }
    else if(this.value>50){
        if($(".up-theme")[0].innerText==="Bagel or Dog?"){
            displayValue.innerHTML="<%= t(".dog") %> "+((val-50)*2).toString()+"%";
        }else{
            displayValue.innerHTML="<%= t(".chihuahua") %> "+((val-50)*2).toString()+"%";
        }
    }
    else if(this.value<50){
        if($(".up-theme")[0].innerText==="Bagel or Dog?"){
            displayValue.innerHTML="<%= t(".bagel") %> "+((-val+50)*2).toString()+"%";
        }else{
            displayValue.innerHTML="<%= t(".muffin") %> "+((-val+50)*2).toString()+"%";
        }
    }
});

$('.select_theme').empty().html("<%= j render 'choose_theme_from_arr' %>");
