<% content_for(:title, "Sign In") %>

<h1 class="mb-3"><%= t(".sign_in") %></h1>
<div class="row">
  <div class="span6 offset3">
    <%= form_for(:session, url: sessions_path) do |f| %>
      <div class="form-floating">
        <%= f.text_field :email,class:"form-control",placeholder:"name@example.com" %>
        <%= f.label t(".email") %>
      </div>
      <div class="form-floating">
        <%= f.password_field :password,class:"form-control",placeholder:"*****"%>
        <%= f.label t(".password")%>
      </div>
      <%= f.submit t(".sign_in"), class:"w-100 btn btn-large btn-primary mt-3" %>
    <% end %>
    <p class="mt-3 sign_up_link">
      <%= t('.new_user?') %>
      <%= link_to t('.sign_up'), signup_path%>
    </p>
  </div>
</div>